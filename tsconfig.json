{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    },
    "include": [
        "src/**/*"
    ]
}